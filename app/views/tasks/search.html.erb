<h1><span>「<%= @q.title_cont%>」での</span>検索結果</h1>
<div class="my-4">
  <% if @results.count == 0 %>
    <h4>一致する結果はありませんでした。</h4>
  <% else %>
    <table class="">
      <thead>
        <tr class="border-bottom border-dark">
          <th class="p-2"><%= sort_link(@q, :title, "タイトル") %></th>
          <th class="p-2"><%= sort_link(@q, :content, "内容") %></th>
          <th class="p-2"><%= sort_link(@q, :deadline, "期限") %></th>
          <th class="p-2">ステータス</th>
          <th class="p-2"><%= sort_link(@q, :title, "作成日") %></th>
          <th class="p-2">担当者</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @results.each do |task| %>
          <tr>
            <td class="p-2"><%= task.title %></td>
            <td class="p-2"><%= task.content %></td>
            <td class="p-2"><%= task.deadline.strftime("%Y/%m/%d %H:%M:%S") %></td>
            <td class="p-2"><%= status_text(task.status) %></td>
            <td class="p-2"><%= task.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
            <td class="p-2"><%= task.user.name %></td>
            <td><%= link_to '詳細', task, class:"btn btn-outline-dark mr-2" %></td>
            <td><%= link_to '編集', edit_task_path(task) , class:"btn btn-info mr-2"%></td>
            <td><%= link_to '削除', task, method: :delete, data: { confirm: '消したいいですか？' }, class:"btn btn-danger"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>




