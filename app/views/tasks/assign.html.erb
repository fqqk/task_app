<div class="container">
  <h1>アサイン</h1>
  <div class="d-flex justify-content-between">
    <div>
      <p>現在アサインされているユーザー</p>
      <p><%= @task.user.name %></p>
    </div>
    <div>
      <p>新しくアサインするユーザー</p>
      <%= form_with(model: @tasks, url: update_assign_task_path, local: false, method: :patch) do |form| %>
        <div class="select">
          <%= form.collection_select(:user_id, @users, :id, :name, {include_blank: '選択してください'}, {class: "form-control"})%>
        </div>
        <div class="float-right">
          <%= form.submit 'アサインする', class:"btn btn-success"%>
        </div>
      <% end %>
    </div>
  </div>
  <div class="bg-light py-5 px-4 rounded-sm">
    <h1><%= @task.title%></h1>
    <p><%= @task.content%></p>
    <p>期限: <%= @task.deadline%></p>
    <p>ステータス: <%= status_text(@task.status)%></p>
  </div>
</div>