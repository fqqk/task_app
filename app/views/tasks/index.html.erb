<div class="container">
  <h1 class="fw-bold">タスク一覧</h1>
  <div class="row row-col">
    <% @tasks.each do |task| %>
    <div class="d-flex flex-column col-xs-1 col-lg-6 mb-3">
      <%= render task %>
    </div>
    <% end %>
  </div>
  <div class="d-flex fs-5 justify-content-center mt-5">
    <%= paginate @tasks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>