<%= javascript_pack_tag 'tasks/index', 'data-turbolinks-track': 'reload' %>

<div class='container'>
  <div class='d-flex justify-content-between align-items-center mb-5'>
    <h1 class='fw-bold'>タスク一覧</h1>
      <form id='target'>
        <label for='title'>タイトル</label>
        <input name='item' type='radio' value='title' id='title' />
        <label for='user'>担当者</label>
        <input name='item' type='radio' value='user' id='user'>
        <label for='content'>内容</label>
        <input name='item' type='radio' value='content' id='content'>
      </form>
    <div class='d-flex align-items-center'>
      <div id='search-box'></div>
        <select name='none' id='search-select' class='form-control'>
          <% @tasks.each do |task| %>
            <option value=<%= task.id %>><%= task.id %>:<%= task.title %></option>
          <% end %>
        </select>
    </div>
  </div>
  <div class='row row-col'>
    <% @tasks.each do |task| %>
    <div class='d-flex flex-column col-xs-1 col-lg-6 mb-3'>
      <%= render task %>
    </div>
    <% end %>
  </div>
  <div class='d-flex fs-5 justify-content-center mt-5'>
     <%= paginate @tasks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
