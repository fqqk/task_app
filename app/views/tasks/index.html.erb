<div class="container">
<div class="d-flex justify-content-between align-items-center mb-5">
  <h1 class="fw-bold">タスク一覧</h1>
  <div class="d-flex align-items-center">
    <%= search_form_for @q, url: search_tasks_path do |f| %>
    <div class="d-flex mr-5">
      <%= f.search_field :title_cont, placeholder: "タスクタイトルで検索", class:"form-control mr-2" %>
      <%= f.submit '検索', class:"btn btn-primary"%>
    </div>
    <% end %>
    <p class="mb-0 mr-5"><%= link_to "新着", tasks_path(new: "true")%></p>
    <p class="mb-0 mr-5"><%= link_to "古い", tasks_path(old: "true")%></p>
    <p class="mb-0"><%= link_to "即対応必須", tasks_path(emergency: "true")%></p>
  </div>
</div>
  <div class="row row-col">
    <% @tasks.each do |task| %>
    <div class="d-flex flex-column col-xs-1 col-lg-6 mb-3">
      <%= render task %>
    </div>
    <% end %>
  </div>
  <div class="d-flex fs-5 justify-content-center mt-5">
    <%= paginate @tasks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>