<div class="container">
<div class="d-flex justify-content-between align-items-center">
  <h1 class="fw-bold">マイタスク</h1>
  <div class="d-flex ">
      <p class="mb-0 mr-5"><%= link_to "新着", mypage_tasks_path(new: "true")%></p>
      <p class="mb-0 mr-5"><%= link_to "古い", mypage_tasks_path(old: "true")%></p>
      <p class="mb-0"><%= link_to "即対応必須", mypage_tasks_path(emergency: "true")%></p>
  </div>
</div>
  <%= link_to "New Task", new_task_path, class:"btn btn-outline-dark" %>
  <div class="row row-col">
    <% @mytasks.each do |mytask| %>
    <div class="d-flex flex-column col-xs-1 col-lg-6 mb-3">
      <%= render mytask %>
    </div>
    <% end %>
  </div>
   <div class="d-flex fs-5 justify-content-center mt-5">
    <%= paginate @mytasks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>