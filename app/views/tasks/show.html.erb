<div>
  <h2><%= @task.title%></h2>
  <p><%= @task.content%></p>
  <p>期限:<%= @task.deadline%></p>
  <p>担当者:<%= @task.user.name%></p>
  <p>ステータス<%= @task.status%></p>
  <div class="btn-list">
    <%= link_to "一覧へ戻る", root_path, class:"btn"%>
    <%= link_to "編集", edit_task_path(@task), class:"btn"%>
    <%= link_to "アサイン", root_path, class:"btn"%>
  </div>
</div>