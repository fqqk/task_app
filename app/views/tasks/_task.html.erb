<div class=<%= "#{border_style(task.deadline)}" %>>
  <h4 class=<%= "#{h_style(task.deadline)}" %>><%= task.title%></h4>
  <p><%= task.content%></p>
  <p>期限: <%= task.deadline%></p>
  <p>担当者: <%= task.user.name%></p>
  <p>ステータス: <%= status_text(task.status)%></p>
  <div class="btn-list">
    <%= link_to "詳細", task_path(task), class:"btn btn-outline-dark"%>
    <% if task.user == current_user%>
      <%= link_to "編集", edit_task_path(task), class:"btn btn-info"%>
      <%= link_to "削除", task_path(task),method: :delete,  class:"btn btn-danger"%>
    <% end %>
  </div>
</div>