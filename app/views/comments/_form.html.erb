<%= form_with(model: @comment, url:task_comment_url, data: {remote: false}) do |form|%>
  <div class="form-item my-3">
    <%= form.text_area :comment, class:"form-control",rows:"3" %>
  </div>
  <div class="d-flex justify-content-between align-items-center">
    <div class="w-50 lh-lg">
      <p class="d-inline"><%= link_to "タスク詳細", task_path(@task) %> |</p>
      <p class="d-inline"><%= link_to "タスク一覧", tasks_path %></p>
    </div>
    <div>
        <%= form.submit button_text, class:"btn btn-success" %>
    </div>
  </div>
<% end %>
